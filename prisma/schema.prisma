generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Camera {
  id        String     @id @default(cuid())
  name      String
  location  String
  incidents Incident[]
}

model Incident {
  id           String   @id @default(cuid())
  type         String
  tsStart      DateTime
  tsEnd        DateTime
  thumbnailUrl String
  resolved     Boolean  @default(false)

  cameraId     String
  camera       Camera   @relation(fields: [cameraId], references: [id])
}
